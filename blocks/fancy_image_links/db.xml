		<field name="pageLinkID" type="I"><unsigned /><notnull /><default value="1" /></field>
		<field name="filesetLinkID" type="I"><unsigned /><default value="0" /></field>
		<field name="imageLinkID" type="I"><unsigned /><default value="0" /></field>
	</table>
